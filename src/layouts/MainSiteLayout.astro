---
import '../scss/global.scss'

import DarkLightToggle from '../components/DarkLightToggle/DarkLightToggle.astro'

export interface Props {
    title?: string
}

const { title = 'Home Page' } = Astro.props as Props
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>

        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    </head>
    <body>
        <header>
            <a href="/">rolandfranke</a>

            <DarkLightToggle />
        </header>

        <main>
            <slot />
        </main>

        <footer>
            <p>&copy; 2023 rolandfranke.nl</p>
        </footer>
    </body>
</html>
